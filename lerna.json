{
  "packages": [
    "packages/*"
  ],
  "tagVersionPrefix": "",
  "command": {
    "version": {
      "includeMergedTags": true,
      "noCommitHooks": true,
      "yes": true,
      "conventionalCommits": true
    },
    "publish": {
      "includeMergedTags": true,
      "noCommitHooks": true,
      "yes": true,
      "conventionalCommits": true
    }
  },
  "changelogPreset": {
    "name": "conventionalcommits",
    "preMajor": true
  },
  "ignoreChanges": [
    "packages/*/test/**"
  ],
  "useWorkspaces": true,
  "version": "independent"
}
